<%= form_for @post do |f| %>
  
  <% if @post.errors.any? %>
  <div class="alert alert-error">
    <h4>There was an error:</h4>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :url %>
  <%= f.text_field :url %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
