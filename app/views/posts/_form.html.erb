<%= form_for @post do |f| %>
  
  <%= render 'shared/errors', object: @post %>
  
  <div class='control-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class='control-group'>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class='control-group'>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
